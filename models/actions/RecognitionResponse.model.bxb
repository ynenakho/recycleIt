action (RecognitionResponse) {
  type (Constructor)
  description (Action to get image and material)
  collect {

    input (material) {
      type (Material)
      min (Required) max (Many)
      default-init {
         intent {
          goal: Material
        }
      }
    }
    
    input (image) {
      type (Image)
      min (Required) max (One)
    }
    
  }
  output (RecognitionResponseConcept)
}
