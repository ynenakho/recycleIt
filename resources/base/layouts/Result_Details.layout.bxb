layout {
  match: Response (result)
  mode (Details)

 content {
    section {
      content {
        title-area {
          halign (Start)
          slot1 {
            text {
              value ("#{value(result.item)}")
              style (Title_L)
            }
          }
        }
      }
    }
    section {
      title ("Description")
      content {
        paragraph {
          value ("#{value(result.info)}")
          style (Detail_L)
        }
      }
    }
  }
}